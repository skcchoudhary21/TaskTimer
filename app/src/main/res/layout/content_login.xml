<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/maroon_light_background"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/signInlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"

        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.myapp.suresh.userregistration.Register"
        tools:showIn="@layout/activity_register"
        android:weightSum="1">


        <ImageView
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:id="@+id/ivLogo"
            android:layout_marginTop="30dp"
            android:background="@drawable/myapplogo320"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sign in"
                android:focusable="false"
                android:textSize="45sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:textColor="#eeeeee"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal" />

            ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ibUserImage"
            android:background="@drawable/image_register"
            android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:textColorHint="#eeeeee"
            android:textColor="#eeeeee"

            android:fontFamily="sans-serif-light"
            android:hint="Employee Id"
            android:drawableRight="@drawable/email"
            android:id="@+id/etEmailIdSignin" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColorHint="#eeeeee"
            android:textColor="#eeeeee"
            android:inputType="textPassword"
            android:fontFamily="sans-serif-light"
            android:hint="Password"
            android:drawableRight="@drawable/password"
            android:id="@+id/etPasswordSignIn" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Password"
                android:ems="10"
                android:textColorHint="#eeeeee"
                android:textColor="#eeeeee"
                android:fontFamily="sans-serif-light"
                android:id="@+id/cbShowPassword"
                android:layout_weight="1"
                android:checked="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:ems="10"
                android:gravity="end"
                android:textColorHint="#eeeeee"
                android:textColor="#eeeeee"
                android:fontFamily="sans-serif-light"
                android:clickable="true"
                android:layout_weight="1"
                android:id="@+id/tvForgotPassword" />
        </LinearLayout>

        <Button
            android:onClick="signUp"
            android:layout_width="176dp"
            android:layout_height="60dp"
            android:text="Sign in"
            android:textColorHint="#eeeeee"
            android:textColor="#eeeeee"
            android:background="@drawable/btn_sign_up"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:id="@+id/btSignIn"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not a member yet? Sign up here"
            android:id="@+id/tvAlreadyaMember"
            android:clickable="true"
            android:textColorHint="#eeeeee"
            android:textColor="#eeeeee"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:fontFamily="sans-serif-light"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>
