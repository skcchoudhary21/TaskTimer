<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/maroon_light_background"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/signUplayout"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.myapp.suresh.userregistration.Register"
        android:weightSum="1">


        <ImageView
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:id="@+id/imageView"
            android:layout_marginTop="30dp"
            android:background="@drawable/myapplogo320"
            android:layout_gravity="center_horizontal" />

        <EditText
                android:layout_width="match_parent"
                android:fontFamily="sans-serif-light"
                android:layout_height="wrap_content"
                android:singleLine="true"
            android:textColorHint="#eeeeee"
                android:textColor="#eeeeee"
                android:drawableRight="@drawable/user1"
                android:hint="Employee name"

                android:id="@+id/etEmpName" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:textColorHint="#eeeeee"
            android:textColor="#eeeeee"
            android:fontFamily="sans-serif-light"
            android:hint="Employee Id"
            android:drawableRight="@drawable/email"
            android:id="@+id/etEmpId" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColorHint="#eeeeee"
            android:textColor="#eeeeee"
            android:fontFamily="sans-serif-light"
            android:hint="Password"
            android:drawableRight="@drawable/password"
            android:id="@+id/etPassword" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="textPassword"
            android:ems="10"
            android:textColorHint="#eeeeee"
            android:textColor="#eeeeee"
            android:fontFamily="sans-serif-light"
            android:id="@+id/etConfirmPassword"
            android:hint="Confirm Password"
            android:drawableRight="@drawable/confirm_password"/>

        <CheckBox
            android:id="@+id/terms_conditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColorHint="#eeeeee"
            android:textColor="#eeeeee"
            android:text="By clicking Sign Up you agree all the Terms and Conditions"
            android:fontFamily="sans-serif-light"
            android:checked="false" />

        <Button
            android:onClick="signUp"
            android:layout_width="176dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Sign Up"
            android:background="@drawable/btn_sign_up"
            android:id="@+id/btSave"
            android:textColorHint="#eeeeee"
            android:textColor="#eeeeee"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:onClick="signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already a member? Login here."
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:id="@+id/tvAlreadyaMember"
            android:clickable="true"
            android:textColorHint="#eeeeee"
            android:textColor="#eeeeee"
            android:fontFamily="sans-serif-light"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>
